<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/m_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入金额"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ylx.keyboarddemo.keyboard.CustomNumKeyboardView
        android:id="@+id/keyboardView"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyTextColor="@color/flag_color_333333"
        android:keyTextSize="@dimen/qb_px_29"
        android:keyPreviewOffset="0dp"
        android:layout_gravity="bottom"
        android:shadowColor="@color/flag_color_EDEDED"
        android:background="@color/flag_color_FA5555"
        android:shadowRadius="0.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>